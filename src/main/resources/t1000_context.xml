<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd" xmlns:c="http://www.springframework.org/schema/c"
       default-lazy-init="true"
>


    <import resource="sony_context.xml"/>
    <import resource="toshiba_context.xml"/>


    <bean id="t1000" class="ru.javabegin.training.spring.impls.robot.ModelT1000" parent="baseModel">

        <constructor-arg value="silver" index="3" type="java.lang.String" />
        <constructor-arg value="2005" index="4" type="int" />
        <constructor-arg value="true" index="5" type="boolean" />

    </bean>

    <bean id="baseModel" abstract="true">
        <constructor-arg ref="sonyHand" />
        <constructor-arg ref="sonyLeg" />
        <constructor-arg ref="sonyHead" />
    </bean>

    <bean class = "ru.javabegin.training.spring.main.MyBeanProcessor">

    </bean>

    <bean id="t1001" class="ru.javabegin.training.spring.impls.robot.ModelT1000"

          lazy-init="true"

          p:hand-ref="toshibaHand"
          p:leg-ref="sonyLeg"
          p:head-ref="toshibaHead"

          c:color="blue" c:year="12" c:soundEnabled="true"

    />


</beans>