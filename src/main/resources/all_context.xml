<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd" xmlns:c="http://www.springframework.org/schema/c"
       default-lazy-init="true"
>

    <import resource="t1000_context.xml"/>

    <bean id = "t1000Conveyor" class = "ru.javabegin.training.spring.impls.conveyor.T1000Conveyor">
        <lookup-method name = "createRobot" bean = "t1000"/>
    </bean>

    <bean id = "t1001" class = "ru.javabegin.training.spring.impls.robot.ModelT1000">
        <replaced-method  name="action"  replacer="robotReplacer" />
    </bean>

    <bean id="robotReplacer" class="ru.javabegin.training.spring.impls.robot.RobotReplacer" />

</beans>

